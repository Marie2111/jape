GUIDIR=../../java_japeserver
ENGINEDIR=../../camlengine
SERVERSCRIPT=exec java -jar japeserver.jar
RESOURCES=../CommonBuildResources
BIN=.
COMPILEDIR=./compile
SOURCES=-I ../../../ocamlengine

all:         ; $(MAKE) engine GUI install

engine:      ; (cd $(ENGINEDIR); make jape);\
               mv $(ENGINEDIR)/jape .
               
cleanengine: ; (cd $(ENGINEDIR); make clean jape);\
               mv $(ENGINEDIR)/jape .

GUI:         ; cd $(GUIDIR); $(MAKE) -f $(RESOURCES)/Makefile-java japeserver.jar
CLEANGUI:    ; cd $(GUIDIR); $(MAKE) -f $(RESOURCES)/Makefile-java clean japeserver.jar

install:     ; cp $(GUIDIR)/japeserver.jar $(BIN);\
               echo $(SERVERSCRIPT) > $(BIN)/japeserver ;\
               chmod +x $(BIN)/japeserver

clean:       ; rm -f $(BIN)/japeserver.jar $(BIN)/*.gif $(BIN)/*.jpg $(BIN)/jape $(BIN)/japeserver


jape.jar:    ; jar cvf $(OS)jape.jar jape japeserver.jar examples 



@
